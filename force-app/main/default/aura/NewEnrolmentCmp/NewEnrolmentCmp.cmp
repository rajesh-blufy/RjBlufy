                                            </div>
                                        </div>
                                    </div>
                                    
                                    
                                </div>
                            </div>
                        </div>
                        
                    </aura:iteration>
					</fieldset>
                    
                </aura:iteration>
                <!-- </lightning:accordionSection>
                                
                        </lightning:accordion> -->  
            </div>
			
